{
  "version": "0.1.0",
  "name": "price-calculator",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "Tasos Alexandris",
    "email": "alexandrisanas@gmail.com",
    "url": "https://dropshie.com"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "Discount-Calculator",
    "copyright": "Copyright Â© 2020 killerwhale",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/pig.ico",
      "target": "NSIS"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-context-menu": "^0.16.0",
    "electron-is-dev": "^1.1.0",
    "lodash": "^4.17.15",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "update-electron-app": "^1.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-dev": "concurrently \"set BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron . \"",
    "electron-dev-win": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron . \"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build -mw",
    "build-arch": "electron-builder -mw",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.4.1",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  }
}
